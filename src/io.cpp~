#include "stdinclude.h";

using namespace cv;
using namespace std;

vector<Mat> read_P_mats(int num_cams, string filename) {

    ifstream file;
    file.open(filename.c_str());
    
    vector<Mat> P_mats;
    Mat_<double> A = Mat_<double>::zeros(3,4);
    double data;
    char c;

    for (int i=0; i<num_cams; i++) {
        for (int j=0; j<3; j++) {
            for (int k=0; k<4; k++) {
                file>>data;
                A(j,k) = data;
                if (j==2 && k==3) continue;
                file>>c;
            }
        }
        P_mats.push_back(A.clone());
    }

    file.close();

    return(P_mats);

}
